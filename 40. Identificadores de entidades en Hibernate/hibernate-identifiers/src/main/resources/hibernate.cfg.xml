        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">
            jdbc:postgresql://localhost:5432/hibernate1
        </property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">admin</property>
        <property name="hibernate.connection.pool_size">50</property>
        <property name="show_sql">true</property>
        <property name="hibernate.format_sql">true</property>
        <property name="hibernate.hbm2ddl.auto">create</property>
        <mapping class="com.example.model.Employee" />
        <mapping class="com.example.model.ProductOrder" />
        <mapping class="com.example.model.Customer" />
        <mapping class="com.example.model.Company" />
    </session-factory>
</hibernate-configuration>